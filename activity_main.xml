<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="6"
            android:columnCount="4">
	<TextView
			android:id="@+id/Show"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:layout_columnSpan="4"
			android:hint="0"
			android:gravity="bottom|right"/>
	<Button
			android:id="@+id/Button_c"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_c"
			android:layout_columnSpan="2"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>

	<Button
			android:id="@+id/Except"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_except"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/X"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_x"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_7"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_7"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_8"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_8"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_9"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_9"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_-"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="-"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_4"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_4"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_5"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_5"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_6"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_6"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_add"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_add"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_1"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_1"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_2"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_2"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_3"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_3"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_sum"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_sum"
			android:layout_columnWeight="1"
			android:layout_rowSpan="2"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_0"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/butoon_0"
			android:layout_columnWeight="1"
			android:layout_columnSpan="2"
			android:layout_rowWeight="1"/>
	<Button
			android:id="@+id/Button_."
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:text="@string/button_node"
			android:layout_columnWeight="1"
			android:layout_rowWeight="1"/>

</GridLayout>