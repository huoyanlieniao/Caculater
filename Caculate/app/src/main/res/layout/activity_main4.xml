<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Main2Activity">
	
	
	<EditText
			android:id="@+id/Schal_Input"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:hint="Please_Input"
			android:textSize="25sp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toLeftOf="@+id/Schal_Spinner"
			android:layout_marginTop="48dp"/>
	
	<Spinner
			android:id="@+id/Schal_Spinner"
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:layout_constraintLeft_toRightOf="@+id/Schal_Input"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="@id/Schal_Input"
			app:layout_constraintBottom_toBottomOf="@id/Schal_Input"
			app:layout_constraintVertical_bias="1.0"/>
	
	
	<TextView
			android:id="@+id/Schal_wait_2"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:textSize="25sp"
			android:gravity="center"
			android:background="@android:color/holo_blue_light"
			app:layout_constraintTop_toBottomOf="@+id/Schal_Input"
			app:layout_constraintRight_toLeftOf="@id/Schal_2"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginTop="52dp"/>
	
	<TextView
			android:id="@+id/Schal_2"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:hint="2进制"
			android:textSize="25sp"
			android:gravity="center"
			app:layout_constraintLeft_toRightOf="@+id/Schal_wait_2"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="@id/Schal_wait_2"
			app:layout_constraintBottom_toBottomOf="@id/Schal_wait_2"
			app:layout_constraintVertical_bias="0.0"/>
	
	<TextView
			android:id="@+id/Schal_wait_4"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:textSize="25sp"
			android:gravity="center"
			android:background="@android:color/holo_green_light"
			app:layout_constraintTop_toBottomOf="@+id/Schal_Input"
			app:layout_constraintRight_toLeftOf="@id/Schal_4"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginTop="132dp"/>
	
	<TextView
			android:id="@+id/Schal_4"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:hint="4进制"
			android:textSize="25sp"
			android:gravity="center"
			app:layout_constraintLeft_toRightOf="@+id/Schal_wait_4"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="@id/Schal_wait_4"
			app:layout_constraintBottom_toBottomOf="@id/Schal_wait_4"
			app:layout_constraintVertical_bias="1.0"/>
	
	<TextView
			android:id="@+id/Schal_wait_8"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:textSize="25sp"
			android:gravity="center"
			android:background="@android:color/holo_orange_light"
			app:layout_constraintTop_toBottomOf="@+id/Schal_Input"
			app:layout_constraintRight_toLeftOf="@id/Schal_8"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginTop="216dp"/>
	
	<TextView
			android:id="@+id/Schal_8"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:hint="8进制"
			android:textSize="25sp"
			android:gravity="center"
			app:layout_constraintLeft_toRightOf="@+id/Schal_wait_8"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="@id/Schal_wait_8"
			app:layout_constraintBottom_toBottomOf="@id/Schal_wait_8"
			app:layout_constraintVertical_bias="1.0"/>
	
	<TextView
			android:id="@+id/Schal_16"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:hint="16进制"
			android:textSize="25sp"
			android:gravity="center"
			app:layout_constraintLeft_toRightOf="@+id/Schal_wait_16"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="@id/Schal_wait_16"
			app:layout_constraintBottom_toBottomOf="@id/Schal_wait_16"
			app:layout_constraintVertical_bias="0.0"/>
	
	<TextView
			android:id="@+id/Schal_wait_16"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:textSize="25sp"
			android:gravity="center"
			android:background="@android:color/holo_red_light"
			app:layout_constraintTop_toBottomOf="@+id/Schal_Input"
			app:layout_constraintRight_toLeftOf="@id/Schal_16"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginTop="400dp"/>
	
	
	<TextView
			android:id="@+id/Schal_wait_10"
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:textSize="25sp"
			android:gravity="center"
			android:background="@android:color/holo_purple"
			app:layout_constraintTop_toBottomOf="@+id/Schal_Input"
			app:layout_constraintRight_toLeftOf="@id/Schal_10"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginTop="304dp"/>
	
	<TextView
			android:id="@+id/Schal_10"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:hint="10进制"
			android:textSize="25sp"
			android:gravity="center"
			app:layout_constraintLeft_toRightOf="@+id/Schal_wait_10"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="@id/Schal_wait_10"
			app:layout_constraintBottom_toBottomOf="@id/Schal_wait_10"
			app:layout_constraintVertical_bias="1.0"/>
	
	<Button
			android:id="@+id/Schal_back"
			android:text="返回"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="Long_back_click"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			
			
			/>


</androidx.constraintlayout.widget.ConstraintLayout>